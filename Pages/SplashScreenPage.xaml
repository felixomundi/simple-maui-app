<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="users.Pages.SplashScreenPage"
    BackgroundColor="#f2f2f2">

    <VerticalStackLayout
        VerticalOptions="Center"
        HorizontalOptions="Center"
        Spacing="25"
        Padding="40">

        <Image Source="app_icon.png"
               WidthRequest="120"
               HeightRequest="120"
               Aspect="AspectFit" />

        <Label Text="Welcome to Agency Banking"
               FontSize="28"
               HorizontalOptions="Center"
               TextColor="#333"
               FontAttributes="Bold" />

        <Label Text="Manage your banking services with ease and security."
               FontSize="16"
               TextColor="#666"
               HorizontalTextAlignment="Center" />

        <Button Text="Login"
                WidthRequest="200"
                HeightRequest="50"
                Clicked="OnLoginClicked"
                BackgroundColor="#007AFF"
                TextColor="White"
                CornerRadius="8" />

        <Button Text="Register"
                WidthRequest="200"
                HeightRequest="50"
                Clicked="OnRegisterClicked"
                BackgroundColor="#34C759"
                TextColor="White"
                CornerRadius="8" />
    </VerticalStackLayout>
</ContentPage>
